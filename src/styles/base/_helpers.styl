/*
 * general helpers
 */

.text-center
	text-align center

.icon
	display inline-block
	width 17px
	height 17px
	fill #000
	color #000

.clearfix:before,
.clearfix:after
	content ""
	display table

.clearfix:after
	clear both

/*
 * animations
 */

 .animated
 	animation fade-in-down 0.6s
 	animation-delay .3s

 @keyframes fade-in-down
 	0%
 		opacity 0
 		transform translateY(-10px)

 	100%
 		opacity 1
 		transform translateY(0)
